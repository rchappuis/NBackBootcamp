<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:id="@+id/title_firstline"
        android:text="@string/title_line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="sans-serif-medium"
        android:textSize="48sp"
        android:textStyle="bold" />
    <TextView android:id="@+id/title_secondline"
        android:text="@string/title_line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/title_firstline"
        android:layout_marginBottom="50dp"
        android:fontFamily="sans-serif-medium"
        android:textSize="48sp"
        android:textStyle="bold"/>
    <Button android:id="@+id/game_start"
        android:text="@string/game_start_text"
        android:background="@drawable/menu_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_secondline"
        android:layout_centerHorizontal="true"
        android:textSize="36sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="40dp" />
    <Button android:id="@+id/game_settings"
        android:text="@string/game_settings_text"
        android:background="@drawable/visual_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/game_start"
        android:layout_centerHorizontal="true"
        android:textSize="36sp"
        android:textColor="#FFFFFF"
        android:clickable="true" />

</RelativeLayout>
